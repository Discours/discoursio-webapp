{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": false
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 108
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "single",
      "trailingComma": "all",
      "enabled": true,
      "jsxQuoteStyle": "double",
      "arrowParentheses": "always"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "complexity": {
        "noForEach": "off"
      },
      "nursery": {
        "useImportRestrictions": "off"
      },
      "style": {
        "useNamingConvention": "off"
      },
      "suspicious": {
        "noConsoleLog": "off"
      }
    }
  }
}
